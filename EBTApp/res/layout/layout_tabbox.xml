                    android:layout_marginTop="10dip"
                    android:text="@string/boxsealnumber6"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/value_boxseal6"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/boxsealnumber6"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/scan_boxseal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/scan_32px" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/rel_boxpic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/camerabox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/btn_camear3x"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/boxpicname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dip"
                            android:contentDescription="@string/boxtable"
                            android:text="@string/boxtable1"
                            android:textSize="16sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/delcamerabox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:adjustViewBounds="true"
                        android:paddingTop="-10dp"
                        android:scaleType="fitStart"
                        android:visibility="gone"
                        android:contentDescription="@null"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/camerabox2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/btn_camear3x"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/boxpicname2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dip"
                            android:contentDescription="@string/boxtable"
                            android:text="@string/boxtable2"
                            android:textSize="16sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/delcamerabox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:adjustViewBounds="true"
                        android:paddingTop="-10dp"
                        android:scaleType="fitStart"
                        android:visibility="gone"
                        android:contentDescription="@null"
                        android:src="@drawable/delete" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/camerabox3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/btn_camear3x"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/boxpicname3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dip"
                            android:contentDescription="@string/boxtable"
                            android:text="@string/boxtable3"
                            android:textSize="16sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:id="@+id/delcamerabox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:adjustViewBounds="true"
                        android:paddingTop="-10dp"
                        android:scaleType="fitStart"
                        android:visibility="gone"
                        android:contentDescription="@null"
                        android:src="@drawable/delete" />
                </FrameLayout>
            </LinearLayout>
            
            
            <RelativeLayout
                android:id="@+id/rel_moreboxpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style">

                <TextView
                    android:id="@+id/txt_moreboxpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/morepic"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/rel_moreboxpicview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style" >
                <com.rm.until.MyGridView 
                    android:id="@+id/gridView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@null"
                    android:numColumns="3">
                </com.rm.until.MyGridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" >

        <Button
            android:id="@+id/saveboxbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btn_style"
            android:text="@string/save"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>