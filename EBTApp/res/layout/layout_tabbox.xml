<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_mytitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tabboxview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rel_boxtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_titlestyle" >

                <TextView
                    android:id="@+id/txt_boxtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/tablebox"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rel_boxzb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_boxzb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/assetsid"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_boxzb"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:background="@null"
                    android:digits="1234567890."
                    android:gravity="center_vertical|right"
                    android:hint="@string/tbassetsid"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_boxseal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_boxseal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/boxsealnumber1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/value_boxseal1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="10dip"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/boxsealnumber1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/scan_boxseal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@null"
                    android:src="@drawable/scan_32px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_boxseal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_boxseal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="10dip"
                    android:text="@string/boxsealnumber2"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/value_boxseal2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="10dip"
