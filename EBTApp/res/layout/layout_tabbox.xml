                <EditText
                    android:id="@+id/value_boxseal5"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/boxsealnumber5"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/scan_boxseal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:src="@drawable/scan_32px" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rel_boxseal6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/row_style"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_boxseal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
